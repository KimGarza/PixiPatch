{
  "cli": {
    "version": ">= 0.37.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      }
    }
  },
  "submit": {
    "development": {
      "android": {
        "serviceAccountKeyPath": "service-account-key.json",
        "track": "internal"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-prod-app-id",
        "appleTeamId": "your-apple-team-id"
      }
    },
    "production": {
      "android": {
        "serviceAccountKeyPath": "service-account-key.json",
        "track": "production"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-prod-app-id",
        "appleTeamId": "your-apple-team-id"
      }
    }
  }
}
