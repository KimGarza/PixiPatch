{
  "cli": {
    "version": ">= 0.37.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      }
    },
    "ios-simulator": {
      "name": "iOS Simulator Build",
      "ios": {
        "simulator": true
      }
    },
    "ios-device": {
      "name": "iOS Device Build",
      "ios": {
        "simulator": false
      }
    }
  },
  "submit": {
    "development": {
      "android": {
        "serviceAccountKeyPath": "service-account-key.json",
        "track": "development",
        "androidPackage": "xyz.pixipatch.test"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-prod-app-id", 
        "appleTeamId": "your-apple-team-id",
        "appIdentifier": "com.yourapp.bundleid.prod" 
      }
    },
    "production": {
      "android": {
        "serviceAccountKeyPath": "service-account-key.json",
        "track": "production",
        "androidPackage": "xyz.pixipatch.test"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-prod-app-id", 
        "appleTeamId": "your-apple-team-id",
        "appIdentifier": "com.yourapp.bundleid.prod" 
      }
    }
  }
}
